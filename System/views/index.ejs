<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <script src="jquery.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="/style.css">
        <title>Login e Acesso</title>
    </head>
    <body>
        <section class="section-degrade">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6 text-center">
                        <form class="form-baixo bg-white p-5" id="form">
                            <div class="form-group">
                                <label for="login"><p class="login">Login</p></label>
                                <input type="text" class="form-control" id="login" placeholder="Login">
                            </div>
                            <div class="form-group">
                                <label for="senha"><p class="login">Password</p></label>
                                <input type="password" class="form-control" id="senha" placeholder="Password">
                            </div>
                            <button id="botao-submit" type="button" class="text-center px-5 py-2 btn button-config">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <script>
            jQuery(function($){
                $(document).ready(function(){
                    $('#botao-submit').on('click', function(){
                        var dados = {
                            login: $('#login').val(),
                            senha: $('#senha').val()
                        }
                        $.ajax({
                            url: '/validarLogin',
                            type: "POST",
                            data: dados,
                            success: function( data ) {
                                if(data == 'go'){
                                    window.location.href = '/paginaPrincipal';
                                }
                            },
                            error: function (request, status, error) {
                                alert(request.responseText);
                            }
                        });
                    });
                });
            });
        </script>
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    </body>
</html>